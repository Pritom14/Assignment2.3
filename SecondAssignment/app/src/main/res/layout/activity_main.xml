<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#00ff5d"
    tools:context="com.example.shaloin.secondassignmentc.MainActivity">

    <EditText
        android:id="@+id/emailID"
        android:background="#f9f4f4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:inputType="textEmailAddress"
        android:hint="@string/email"
        android:textColorHint="#2b2b2b"/>
    <EditText
        android:id="@+id/passID"
        android:layout_below="@+id/emailID"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"
        android:background="#f9f4f4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:hint="@string/password"
        android:textColorHint="#2b2b2b"/>
    <Button
        android:id="@+id/bloginID"
        android:layout_below="@id/passID"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:background="#f9f4f4"
        android:textColor="#000000"
        android:text="@string/blogin"
        android:textSize="18sp"
        android:layout_height="40dp" />
    <TextView
        android:id="@+id/textVID"
        android:layout_below="@+id/bloginID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="18sp"
        android:text="@string/not"
        android:textColor="#efeaea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</RelativeLayout>
